rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow all read and write access to the 'staff' collection
    match /staff/{document=**} {
      allow read, write: if true;
    }
    
    // Allow all read and write access to any other collections
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
